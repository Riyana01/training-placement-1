class Solution:
    def splitArray(self, nums, k):
        def countPartitions(max_sum_allowed):
            count, total = 1, 0
            for num in nums:
                if total + num > max_sum_allowed:
                    count += 1
                    total = num
                else:
                    total += num
            return count

        left, right = max(nums), sum(nums)
        while left < right:
            mid = (left + right) // 2
            if countPartitions(mid) > k:
                left = mid + 1
            else:
                right = mid

        return left
