class Solution {
    public int getCommon(int[] nums1, int[] nums2) {
        int i = 0, j = 0; // ğŸ‘£ Two pointers at trailheads
        
        // ğŸ§­ Hike until one trail ends
        while (i < nums1.length && j < nums2.length) {
            if (nums1[i] == nums2[j]) return nums1[i]; // ğŸ¯ SUMMIT MATCH!
            
            // â›°ï¸ Climber with lower altitude ascends
            if (nums1[i] < nums2[j]) i++; 
            else j++;
        }
        return -1; // ğŸŒ«ï¸ No common peaks found
    }
}
